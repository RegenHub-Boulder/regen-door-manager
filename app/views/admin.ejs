<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <!-- Centered logo -->
  <div class="logo-container">
    <img src="/images/regenhub_logo.png" alt="Logo">
  </div>

  <!-- Page content wrapped in a container with margins -->
  <div class="content-container">
    <h1>User List</h1>

    <div class="table-container">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Telegram</th>
            <th>Email</th>
            <th>Pin Code Slot</th>
            <th>Day Passes</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(user) { %>
            <tr>
              <td><%= user.name %></td>
              <td>
                <span class="badge <%= user.member_type === 'full' ? 'badge-full' : 'badge-daypass' %>">
                  <%= user.member_type === 'full' ? 'Full' : 'Day Pass' %>
                </span>
              </td>
              <td><%= user.telegram_username || '-' %></td>
              <td><%= user.email || '-' %></td>
              <td>
                <% if (user.member_type === 'full') { %>
                  <% if (user.pin_code) { %>
                    Slot <%= user.pin_code_slot %>
                  <% } else { %>
                    No Pin (Slot <%= user.pin_code_slot %>)
                  <% } %>
                <% } else { %>
                  N/A
                <% } %>
              </td>
              <td>
                <% if (user.member_type === 'daypass' && user.dayPasses) { %>
                  <% const totalPasses = user.dayPasses.reduce((sum, p) => sum + p.allowed_uses, 0); %>
                  <% const usedPasses = user.dayPasses.reduce((sum, p) => sum + p.used_count, 0); %>
                  <%= usedPasses %>/<%= totalPasses %> used
                <% } else { %>
                  -
                <% } %>
              </td>
              <td>
                <div class="action-buttons">
                  <% if (user.member_type === 'full') { %>
                    <form action="/remove-pin" method="POST" style="display: inline;">
                      <input type="hidden" name="id" value="<%= user.id %>">
                      <button type="submit" class="btn btn-small" onclick="showSpinner()">Remove Pin</button>
                    </form>
                    <button class="btn btn-small" onclick="sendPinToDoor('<%= user.pin_code_slot %>')">Send Pin</button>
                  <% } else { %>
                    <button class="btn btn-small" onclick="managePasses('<%= user.id %>')">Manage Passes</button>
                  <% } %>
                  <button class="btn btn-small" onclick="editUser('<%= user.id %>')">Edit</button>
                  <form action="/remove" method="POST" style="display: inline;" onsubmit="return confirmDelete()">
                    <input type="hidden" name="id" value="<%= user.id %>">
                    <button type="submit" class="btn btn-small btn-delete-user" onclick="showSpinner()">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Fix the "Add New User" button styling -->
    <a href="/add" class="btn btn-submit">Add New User</a>

    <!-- Spinner element -->
    <div class="spinner" id="spinner"></div>
  </div>

  <script src="/scripts/common.js"></script>
  <script>
    function showSpinner() {
      document.getElementById('spinner').style.display = 'block';
    }

    function hideSpinner() {
      document.getElementById('spinner').style.display = 'none';
    }

    function confirmDelete() {
      const confirmed = confirm('Are you sure you want to fully delete this user? This action cannot be undone.');
      if (!confirmed) {
        hideSpinner();
      }
      return confirmed;
    }

    function sendPinToDoor(slot) {
      showSpinner();
      fetch('/send-pin', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ slot })
      })
      .then(response => response.ok ? alert('Pin sent to door successfully!') : alert('Failed to send pin to door.'))
      .catch(() => alert('An error occurred while sending the pin.'))
      .finally(() => hideSpinner());
    }

    function editUser(id) {
      showSpinner();
      window.location.href = `/edit?id=${id}`;
    }

    function managePasses(userId) {
      showSpinner();
      window.location.href = `/passes?userId=${userId}`;
    }
  </script>

  <style>
    .badge {
      padding: 4px 8px;
      border-radius: 4px;
      font-size: 0.85em;
      font-weight: bold;
    }
    .badge-full {
      background-color: #4CAF50;
      color: white;
    }
    .badge-daypass {
      background-color: #2196F3;
      color: white;
    }
    .btn-small {
      padding: 4px 8px;
      font-size: 0.85em;
    }
  </style>
</body>
</html>
